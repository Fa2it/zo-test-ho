{% extends 'base.html.twig' %}

{% block title %}Car{% endblock %}

{% block body %}
    <h1>Car</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ car.id }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ car.brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ car.model }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ car.image }}</td>
            </tr>
            <tr>
                <th>IsChating</th>
                <td>{{ car.isChating ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsSmoking</th>
                <td>{{ car.isSmoking ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsMusic</th>
                <td>{{ car.isMusic ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsPets</th>
                <td>{{ car.isPets ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>MaxPassangers</th>
                <td>{{ car.maxPassangers }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('car_index') }}">back to list</a>

    <a href="{{ path('car_edit', {'id': car.id}) }}">edit</a>

    {{ include('car/_delete_form.html.twig') }}
{% endblock %}
