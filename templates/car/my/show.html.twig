{% extends 'my.base.html.twig' %}

{% block title %}Benutzer{% endblock %}

{% block mainContent %}
<h1 style="font-size: 1rem;font-weight: bolder">Car</h1>
<div class="card mb-3" style="max-width: 540px; font-size: 0.8rem">
    <div class="row no-gutters">
        <div class="card-body">
            <table class="table table-striped table-bordered w-75">
                <tbody>
                    <tr>
                        <th class="w-50">Marke</th>
                        <td>{{ car.brand }}</td>
                    </tr>
                    <tr>
                        <th>Modell</th>
                        <td>{{ car.model }}</td>
                    </tr>
                    <tr>
                        <th>Chating</th>
                        <td>{{ car.isChating ? 'Ja' : 'Nein' }}</td>
                    </tr>
                    <tr>
                        <th>Rauchen</th>
                        <td>{{ car.isSmoking ? 'Ja' : 'Nein' }}</td>
                    </tr>
                    <tr>
                        <th>Music</th>
                        <td>{{ car.isMusic ? 'Ja' : 'Nein' }}</td>
                    </tr>
                    <tr>
                        <th>Tier in Auto</th>
                        <td>{{ car.isPets ? 'Ja' : 'Nein' }}</td>
                    </tr>
                    <tr>
                        <th>Platz auf der RÃ¼ckbank</th>
                        <td>{{ car.maxPassangers }}</td>
                    </tr>
                    <tr>
                        <th>Photo</th>
                        <td>{% if car.image is not empty  %}
                            <div class="w-25 mb-3" id="display-carPhoto">
                                <img id="blah" src="/media/car_images/{{ car.image}}"
                                     alt="your image" style="max-width: 120px; max-height: 120px" />
                            </div>
                            {% endif %}
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="clearfix">
                <div class="float-left">
                    <a class="mr-2" href="{{ path('my_car_index') }}"><i class="fas fa-list-ol text-dark" style="font-size:1rem"></i></a>

                    <a href="{{ path('my_car_edit', {'id': car.id}) }}"><i class="far fa-edit" style="font-size:1rem"></i></a>
                </div>
                <div class="float-left ml-4">
                    <a href="{{ path('my_car_delete', {'id': car.id,'_token': csrf_token('delete' ~ car.id)}) }}"><i class="fas fa-trash-alt text-danger" style="font-size:1rem"></i></a>
                </div>
            </div>

        </div>
    </div>

</div>

{% endblock %}
