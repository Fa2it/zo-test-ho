{% extends 'my.base.html.twig' %}

{% block title %}Die Fahrt{% endblock %}

{% block mainContent %}
<h1 style="font-size: 1rem;font-weight: bolder">Die Fahrt --> Liste</h1>
<div class="card mb-3" style="max-width: 540px; font-size: 0.8rem">
    <div class="row no-gutters">
        <div class="card-body">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="w-25">Von</th>
                <th>Nach</th>
                <th>Datum</th>
                <th>Aktionen</th>
            </tr>
        </thead>
        <tbody>
        {% for ride in rides %}
            <tr>
                <td>{{ ride.pickUp }}</td>
                <td>{{ ride.dropOff }}</td>
                <td>{{ ride.pickUpDate ? ride.pickUpDate|date('d.m.Y') : '' }}</td>
                <td>
                    <a href="{{ path('my_ride_show', {'id': ride.id}) }}"><i class="fas fa-eye mr-2 text-dark"></i></a>
                    <a href="{{ path('my_ride_edit', {'id': ride.id}) }}"><i class="far fa-edit mr-3"></i></a>
                    <a href="{{ path('my_ride_delete', {'id': ride.id,'_token': csrf_token('delete' ~ ride.id)}) }}"><i class="fas fa-trash-alt text-danger"></i></a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('my_ride_new') }}"><i class="fas fa-plus"></i> Neue Fahrt Plan</a>
        </div>
    </div>

</div>
{% endblock %}
