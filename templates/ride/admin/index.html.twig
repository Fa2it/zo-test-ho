{% extends 'base.html.twig' %}

{% block title %}Ride index{% endblock %}

{% block body %}
    <h1>Ride index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>PickUp</th>
                <th>DropOff</th>
                <th>StopOver</th>
                <th>Description</th>
                <th>PickUpDate</th>
                <th>PickUpTime</th>
                <th>Duration</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ride in rides %}
            <tr>
                <td>{{ ride.id }}</td>
                <td>{{ ride.pickUp }}</td>
                <td>{{ ride.dropOff }}</td>
                <td>{{ ride.stopOver }}</td>
                <td>{{ ride.description }}</td>
                <td>{{ ride.pickUpDate ? ride.pickUpDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ ride.pickUpTime ? ride.pickUpTime|date('H:i:s') : '' }}</td>
                <td>{{ ride.duration }}</td>
                <td>
                    <a href="{{ path('ride_show', {'id': ride.id}) }}">show</a>
                    <a href="{{ path('ride_edit', {'id': ride.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('ride_new') }}">Create new</a>
{% endblock %}
