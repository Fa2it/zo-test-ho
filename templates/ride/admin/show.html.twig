{% extends 'base.html.twig' %}

{% block title %}Ride{% endblock %}

{% block body %}
    <h1>Ride</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ride.id }}</td>
            </tr>
            <tr>
                <th>PickUp</th>
                <td>{{ ride.pickUp }}</td>
            </tr>
            <tr>
                <th>DropOff</th>
                <td>{{ ride.dropOff }}</td>
            </tr>
            <tr>
                <th>StopOver</th>
                <td>{{ ride.stopOver }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ ride.description }}</td>
            </tr>
            <tr>
                <th>PickUpDate</th>
                <td>{{ ride.pickUpDate ? ride.pickUpDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PickUpTime</th>
                <td>{{ ride.pickUpTime ? ride.pickUpTime|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ ride.duration }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ride_index') }}">back to list</a>

    <a href="{{ path('ride_edit', {'id': ride.id}) }}">edit</a>

    {{ include('ride/_delete_form.html.twig') }}
{% endblock %}
