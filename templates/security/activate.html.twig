{% extends 'main.base.html.twig' %}

{% block title %}aktivieren Sie!{% endblock %}

 {% block mainContent %}
     <form method="post" class="w-75 mx-auto">
         <h1 class="h3 mb-3 font-weight-normal">aktivieren Sie</h1>
         <label for="inputEmail" class="sr-only">Email</label>
         <input type="text" value="" name="act[code]" id="act_code" class="form-control" placeholder="Aktivieren Code" required autofocus>

         <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
         >
         <button class="btn btn-lg btn-primary" type="submit">
             Einloggen
         </button>
     </form>
 {% endblock %}
