{% extends 'main.base.html.twig' %}

{% block title %}Registrieren!{% endblock %}

 {% block mainContent %}
     <h1 class="h3 mb-3 font-weight-bold">Registrieren</h1>
     {% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

     {{ form_start(registrationForm, {'attr': {class: 'w-75 mx-auto'}} ) }}
     {{ form_row(registrationForm.sex, { 'label': 'Geschlecht' }) }}

     {{ form_row(registrationForm.firstName, { 'label': 'Vorname' }) }}
     {{ form_row(registrationForm.lastName, { 'label': 'Nachname' }) }}
     {{ form_row(registrationForm.dateOfBirth, { 'label': 'Geburtsdatum' }) }}
     {{ form_row(registrationForm.phoneNr, { 'label': 'Handy-Nr','attr':{'placeholder': 'z.B 015651439876'} }) }}
     {{ form_row(registrationForm.email) }}
     {{ form_row(registrationForm.password) }}
     <div style="font-size: 0.8rem">
         {{ form_widget(registrationForm.terms) }}
         <a href="{{ path('about_terms_condition') }}">Bitte akzeptieren Sie noch die AGB und Nutzungsbedingungen</a>
     </div>
     <button class="btn mt-3 btn-success">Anmeldung</button>
     {{ form_end(registrationForm) }}
 {% endblock %}

